<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/new_conversation_fragment_list_item">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical" android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:gravity="left"
        android:id="@+id/new_conversation_fragment_sub_list_item"
        >

        <TextView
            android:id="@+id/tvName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />


        <TextView
            android:id="@+id/tvMobileNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />



    </LinearLayout>

    <CheckBox
        android:id="@+id/cbIsSelected"
        android:layout_gravity="right"
        android:gravity="center_vertical"
        android:checked="false"
        android:layout_width="wrap_content"
        android:layout_alignBottom="@id/new_conversation_fragment_sub_list_item"
        android:layout_alignTop="@id/new_conversation_fragment_sub_list_item"
        android:layout_alignParentRight="true"
        android:layout_height="wrap_content" />

</RelativeLayout>